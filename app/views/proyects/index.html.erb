<p id="notice"><%= notice %></p>

<h1>Proyects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Initial date</th>
      <th>Due date</th>
      <th>Actual money</th>
      <th>Goal money</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proyects.each do |proyect| %>
      <tr>
        <td><%= proyect.name %></td>
        <td><%= proyect.description %></td>
        <td><%= proyect.initial_date %></td>
        <td><%= proyect.due_date %></td>
        <td><%= proyect.actual_money %></td>
        <td><%= proyect.goal_money %></td>
        <td><%= proyect.score %></td>
        <td><%= link_to 'Show', proyect %></td>
        <td><%= link_to 'Edit', edit_proyect_path(proyect) %></td>
        <td><%= link_to 'Destroy', proyect, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

