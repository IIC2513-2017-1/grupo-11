<article class="card">
  <div class="inner-container">
    <img src="https://content-static.upwork.com/blog/uploads/sites/4/2009/05/project-management.jpg" alt="project_image">
    <div class="card-content">
      <h2><%= link_to project.name, project %></h2>
      <div class="content">Description: <%= project.description %> </div>
      <div class="content">Score: <%= project.score %> </div>
      <div class="content">Collected money: <%= project.actual_money %></div>
      <div class="content">Goal: <%= project.goal_money %></div>
      <div class="content">Expiration date: <%= project.due_date %></div>
      <br/>
      <%= link_to 'Edit', edit_proyect_path(project) %>
      <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }%>
      
    </div>
  </div>
</article>
