<!DOCTYPE html>
<html>
  <head>
    <title>My App</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div id="user-bar">
        <% if current_user %>
            <div class="name">Welcome, <%= current_user.username %></div>
            <%= link_to 'Logout', session_path(current_user), method: :delete %>
        <% else %>
            <%= link_to 'Login', new_session_path %>
        <% end %>
      </div>
    </header>
    <main>
      <% [:alert, :notice].each do |flash_type| %>
          <% if (flash_message = flash[flash_type]).present? %>
              <div class="<%= flash_type %>"><%= flash_message %></div>
          <% end %>
      <% end %>
      <%= yield %>
      <% if current_user %>
        <nav id="sidebar">
          <ul>
            <li> <%= link_to 'Comments', comments_path %> </li>
            <li> <%= link_to 'Projects', proyects_path %> </li>
            <li> <%= link_to 'Users', users_path %> </li>
            <li> <%= link_to 'Categories', categories_path %> </li>
          </ul>
        </nav>
      <% end %>
    </main>
    <footer>
      <div id="footer-message">
        <p> App developed for IIC2513 2017-1</p>
      </div>
    </footer>
  </body>
</html>
