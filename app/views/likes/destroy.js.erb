$(document).bind('ajax:success', function() {
  var flag = $('#flag');
  if(flag.attr('value') == '-1') return;

  var likes = $('#likes_count');
  var button = $('.likes_button');
  likes.text(+likes.text()-1);
  button.prop('value', 'Like');

  var delete_tag = $('[name=_method]');
  delete_tag.remove();

  var lquery = $('#LiQ');
  var form = $('.button_to').first();
  form.attr('action', lquery.attr('value'));

  flag.attr('value', '-1');


});